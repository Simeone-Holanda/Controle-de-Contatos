@model ContactModel
@{
    ViewData["Title"] = "Atualizar de Contatos";
}

<div class="text-center">
    <h1 class="display-4">
        Editar Contato
    </h1>
</div>



<form asp-controller="Contact" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Celular</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Digite o celular do contato">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>

    <button type="submit" class="btn btn-primary w-100">Atualizar</button>
    <a class="btn btn-secondary w-100 mt-2" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
</form>
