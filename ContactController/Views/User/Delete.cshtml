@model UserModel
@{
    ViewData["Title"] = "Deletar Contato";
}

<div class="text-center">
    <h3 class="display-4">
        Realmente deseja apagar o usuário de @Model.Name ?
    </h3>
</div>

<a class="btn btn-danger w-100" role="button" asp-controller="User" asp-action="Index"> Cancelar </a>
<a class="btn btn-primary w-100 mt-2" role="button" asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id"> Confirmar </a>
